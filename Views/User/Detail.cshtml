@model MVC.Models.User

@{
    ViewData["Title"] = "用户详细信息";
}

<div class="row">
    <div class="col-md-4">
        <h2>用户详细信息</h2>
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        <form asp-controller="User" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ID" class="control-label">@Html.DisplayNameFor(model => model.ID)</label>
                <input asp-for="ID" class="form-control" value="@Model.ID" readonly/>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label">@Html.DisplayNameFor(model => model.Password)</label>
                <input asp-for="Password" class="form-control" value="@Model.Password" readonly/>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label">@Html.DisplayNameFor(model => model.Status)</label>
                <input asp-for="Status" class="form-control" value="@Model.Status" readonly/>
            </div>
        </form>
    </div>
</div>