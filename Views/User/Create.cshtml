@model MVC.Models.User

@{
    ViewData["Title"] = "创建用户";
}

<div class="row">
    <div class="col-md-4">
        <h2>创建用户</h2>
    </div>
</div>
<div class="row">
    <div class="col-md-4">
        <form asp-controller="User" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ID" class="control-label">用户号</label>
                <input asp-for="ID" class="form-control"/>
                <span asp-validation-for="ID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label">密码</label>
                <input asp-for="Password" class="form-control"/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UnitNumber" class="control-label">单元号</label>
                <input asp-for="UnitNumber" class="form-control"/>
                <span asp-validation-for="UnitNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="创建" class="btn btn-default"/>
            </div>
        </form>
    </div>
</div>