@model MVC.Models.User
@using MVC.Models

@{
    ViewData["Title"] = "创建用户";
}

<div class="row">
    <div class="col-md-4">
        <h2>创建用户</h2>
    </div>
</div>
<div class="row">
    <div class="col-md-4">
        <form asp-controller="User" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ID" class="control-label">@Html.DisplayNameFor(model => model.ID)</label>
                <input asp-for="ID" class="form-control"/>
                <span asp-validation-for="ID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label">@Html.DisplayNameFor(model => model.Password)</label>
                <input asp-for="Password" class="form-control"/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label">@Html.DisplayNameFor(model => model.Status)</label>
                <select asp-items="@Html.GetEnumSelectList(typeof(Status))" asp-for="Status" class="form-control"></select>
                <!-- <input asp-for="Status" class="form-control"/> -->
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="创建" class="btn btn-default"/>
            </div>
        </form>
    </div>
</div>