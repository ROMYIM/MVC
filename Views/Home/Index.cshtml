<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4" style="padding-top:1em">
        <form class="form-horizontal" asp-controller="user" asp-action="login" method="POST">
            <div class="form-group">
                <label asp-for="ID" class="col-sm-3 control-label">@Html.DisplayNameFor(model => model.ID)</label>
                <div class="col-sm-9">
                    <input asp-for="ID" type="number"  class="form-control" placeholder="请输入账号">
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Password"  class="col-sm-3 control-label">@Html.DisplayNameFor(model => model.Password)</label>
                <div class="col-sm-9">
                    <input asp-for="Password" type="password"  class="form-control" placeholder="请输入密码">
                </div>
            </div>
            <div class="form-group" style="display:none">
                <label asp-for="Status"  class="col-sm-3 control-label">@Html.DisplayNameFor(model => model.Status)</label>
                <div class="col-sm-9">
                    <input asp-for="Status" type="text"  class="form-control" value="Administrator">
                </div>
            </div>
